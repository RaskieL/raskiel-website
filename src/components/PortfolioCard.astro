---
import { getEntry } from "astro:content"
import { getRelativeLocaleUrl } from "astro:i18n";

const {pid, title, start_date, end_date, author, description, category, status, lang} = Astro.props
const s_date = new Date(start_date).toLocaleDateString()
const e_date = new Date(end_date).toLocaleDateString()
const langfr = lang === "fr"
const entry = await getEntry('portfolio', pid)
---

{langfr ? (
<div class="card" id={pid}>
    <div class="card-details">
        <p>{s_date}</p>
        <p>Par: {author}</p>
        <p>Categorie:<br>{category}</p>
        <p><span class="status" id={"status"+pid}></span>{status}</p>
        <div class="context" id={"context"+pid}></div>
    </div>
    <div class="card-content">
        <div class="card-text">
            <h3>{title}</h3>
            <div class="card-desc">
                <p>{description}</p>
            </div>
        </div>
        <div class="card-nav">
            <a class="button" href={getRelativeLocaleUrl('fr',"/portfolio/"+pid)}>AccÃ©der -></a>
        </div>
    </div>
</div>
) : (
<div class="card" id={pid}>
    {langfr}
    <div class="card-details">
        <p>{s_date}</p>
        <p>By: {author}</p>
        <p>Category:<br>{category}</p>
        <p><span class="status" id={"status"+pid}></span>{status}</p>
        <div class="context" id={"context"+pid}></div>
    </div>
    <div class="card-content">
        <div class="card-text">
            <h3>{title}</h3>
            <div class="card-desc">
                <p>{description}</p>
            </div>
        </div>
        <div class="card-nav">
            <a class="button" href={getRelativeLocaleUrl('en',"/portfolio/"+pid)}>Go to -></a>
        </div>
    </div>
</div>
)}

<script is:inline define:vars={{entry}}>
		let d = document.getElementById("status"+entry.id);
		switch(entry.data.status){
			case "Paused":
                d.style.backgroundColor = "gray"
				break;
			case "In works":
				d.style.backgroundColor = "yellow"
				break;
			case "Finished":
				d.style.backgroundColor = "cyan"
				break;
			default:
				break;
		}
        d = document.getElementById("context"+entry.id);
        switch(entry.data.context){
            case "Personal":
                d.style.backgroundColor = "blue"
                break;
            case "Universitary":
                d.style.backgroundColor = "white"
                break;
            case "Internship":
                d.style.backgroundColor = "red"
                break;
        }
</script>


<style>
.context{
    width: 100px;
    height: 15px;
    border: 1px solid white;
    margin: auto;
}
.status{
    padding-left: 28px;
    margin-right: 10px;
    width: 16px;
    border: 1px solid white;
    background-color: white;
    border-radius: 15px;
}
.button{
    border: 1px solid white;
    padding: 10px;
    text-align: center;
    border-radius: 10px;
    cursor: pointer;
    text-decoration: none;
    transition: linear 0.2s;
}
.button:hover{
    color: #e1f6f0;
    box-shadow: 0px 0px 15px #fdd28f;
    transition: linear 0.2s;
}
.card{
    display: flex;
    flex-direction: row;
    width: 550px;
    height: 400px;
    border: 1px solid white;
    margin: auto;
    transition: linear 0.2s;
    border-radius: 20px;
    box-shadow: 10px 10px 5px #e1f6f0;
}
.card:hover{
    transform: scale(1.05);
    transition: linear 0.2s;
    box-shadow: 10px 20px 10px #e1f6f0;
}
.card-details{
    display: flex;
    flex-direction: column;
    width: 200px;
    padding: 15px;
    border-right: 1px solid white;
}
.card-content{
    margin: 10px;
}
.card-text{
    margin-bottom: 40px;
    height: 250px;
}
.card-desc{
    height: 150px;
    overflow-y: scroll;
    border-radius: 25px;
    text-align: justify;
    margin: 10px;
}
</style>